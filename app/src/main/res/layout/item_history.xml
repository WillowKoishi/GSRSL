<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:id="@+id/item_card"
	android:clickable="true"
	android:foreground="?attr/selectableItemBackground"
	android:layout_marginStart="8dp"
	android:layout_marginEnd="8dp"
	android:layout_marginTop="4dp"
	android:layout_marginBottom="4dp">

	<ImageView
		android:layout_height="40dp"
		android:layout_width="40dp"
		android:layout_gravity="start|center"
		android:scaleType="centerInside"
		android:src="@drawable/image_ship"
		android:layout_margin="16dp"
		android:id="@+id/itemhistoryImageView1"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_gravity="start|center"
		android:layout_height="wrap_content"
		android:paddingStart="72dp"
		android:orientation="vertical">

		<TextView
			android:id="@+id/itemhistory_type"
			android:layout_gravity="start|center"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Ship"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textColor="#000000"/>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_marginEnd="8dp"
			android:layout_width="match_parent"
			android:orientation="horizontal">

			<TextView
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:layout_width="match_parent"
				android:text="ID=114514"
				android:id="@+id/itemhistory_id"
				android:layout_weight="1.0"
				android:gravity="left"/>

			<TextView
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:layout_width="match_parent"
				android:text="1919/8/10 11:14"
				android:id="@+id/itemhistory_time"
				android:layout_weight="1.0"
				android:gravity="right"/>

		</LinearLayout>

	</LinearLayout>

	<RelativeLayout
		android:layout_height="match_parent"
		android:layout_width="match_parent">

		<ImageView
			android:layout_height="40dp"
			android:layout_width="40dp"
			android:scaleType="centerInside"
			android:src="@drawable/ic_star_rate_black_48dp"
			android:id="@+id/itemhistoryImageView2"
			android:layout_marginRight="5dp"
			android:layout_marginBottom="5dp"
			android:layout_alignParentTop="true"
			android:layout_marginTop="5dp"
			android:layout_alignParentRight="true"/>

	</RelativeLayout>

</android.support.v7.widget.CardView>

